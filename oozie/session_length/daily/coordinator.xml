<?xml version="1.0" encoding="UTF-8"?>
<!-- FIXME Deprecated by hql/session_length/daily + Airflow -->
<coordinator-app
        xmlns="uri:oozie:coordinator:0.4"
        xmlns:sla="uri:oozie:sla:0.2"
        name="session_length-daily-coord"
        frequency="${coord:days(1)}"
        start="${start_time}"
        end="${stop_time}"
        timezone="Universal">

    <parameters>
        <property><name>name_node</name></property>
        <property><name>job_tracker</name></property>
        <property><name>hive2_jdbc_url</name></property>
        <property><name>hive_site_xml</name></property>

        <property><name>user</name></property>
        <property><name>hive_principal</name></property>
        <property><name>queue_name</name></property>

        <property><name>workflow_file</name></property>
        <property><name>mark_directory_done_workflow_file</name></property>
        <property><name>send_error_email_workflow_file</name></property>

        <property><name>session_length_datasets_file</name></property>
        <property><name>session_tick_data_directory</name></property>
        <property><name>session_length_data_directory</name></property>

        <property><name>start_time</name></property>
        <property><name>stop_time</name></property>

        <property><name>refinery_hive_jar</name></property>

        <property><name>source_table</name></property>
        <property><name>destination_table</name></property>

        <property><name>sla_alert_contact</name></property>
    </parameters>

    <controls>
        <timeout>-1</timeout>
        <concurrency>2</concurrency>
        <throttle>2</throttle>
    </controls>

    <datasets>
        <include>${session_length_datasets_file}</include>
    </datasets>

    <input-events>
        <data-in name="session_tick_input" dataset="session_tick">
            <start-instance>${coord:current(0)}</start-instance>
            <!--
                As the input data set is generated by Refine, the presence of
                an input partition does not guarantee that the data is complete.
                Thus, we wait for 2 extra hours (end-instance = 23 + 2), to
                ensure Refine finishes processing the needed partitions.
            -->
            <end-instance>${coord:current(25)}</end-instance>
        </data-in>
    </input-events>

    <output-events>
        <data-out name="session_length_output" dataset="session_length_daily">
            <instance>${coord:current(0)}</instance>
        </data-out>
    </output-events>

    <action>
        <workflow>
            <app-path>${workflow_file}</app-path>
            <configuration>
                <property>
                    <name>year</name>
                    <value>${coord:formatTime(coord:nominalTime(), "y")}</value>
                </property>
                <property>
                    <name>month</name>
                    <value>${coord:formatTime(coord:nominalTime(), "M")}</value>
                </property>
                <property>
                    <name>day</name>
                    <value>${coord:formatTime(coord:nominalTime(), "d")}</value>
                </property>
                <property>
                    <name>session_length_current_directory</name>
                    <value>${coord:dataOut('session_length_output')}</value>
                </property>
            </configuration>
        </workflow>

        <sla:info>
            <sla:nominal-time>${coord:actualTime()}</sla:nominal-time>
            <sla:should-end>${30 * HOURS}</sla:should-end>
            <sla:alert-events>end_miss</sla:alert-events>
            <sla:alert-contact>${sla_alert_contact}</sla:alert-contact>
        </sla:info>
    </action>
</coordinator-app>
