<?xml version="1.0" encoding="UTF-8"?>
<!--
Defines reusable datasets for mediarequests.
Use this dataset in your coordinator.xml files by setting:

    ${start_time}     - the initial instance of your data.
                        Example: 2014-04-01T00:00Z
    ${mediarequests_data_directory}
                      - Path to directory where data is time bucketed.
                        Example: /wmf/data/wmf/mediarequests
-->

<datasets>
    <dataset name="mediarequests_hourly"
             frequency="${coord:hours(1)}"
             initial-instance="${start_time}"
             timezone="Universal">
        <uri-template>${mediarequests_data_directory}/year=${YEAR}/month=${"$"}{MONTH + 0}/day=${"$"}{DAY + 0}/hour=${"$"}{HOUR + 0}</uri-template>
        <done-flag>_SUCCESS</done-flag>
    </dataset>
</datasets>
