<?xml version="1.0" encoding="UTF-8"?>
<coordinator-app xmlns="uri:oozie:coordinator:0.4"
    xmlns:sla="uri:oozie:sla:0.2"
    name="unique_devices-per_domain-daily-coord"
    frequency="${coord:days(1)}"
    start="${start_time}"
    end="${stop_time}"
    timezone="Universal">
    <parameters>

        <!-- Required properties. -->
        <property><name>name_node</name></property>
        <property><name>job_tracker</name></property>
        <property><name>hive_principal</name></property>
        <property><name>hive2_jdbc_url</name></property>
        <property><name>hive_site_xml</name></property>

        <property><name>mark_directory_done_workflow_file</name></property>
        <property><name>archive_job_output_workflow_file</name></property>
        <property><name>send_error_email_workflow_file</name></property>
        <property><name>workflow_file</name></property>
        <property><name>start_time</name></property>
        <property><name>stop_time</name></property>

        <property><name>pageview_actor_table</name></property>
        <property><name>pageview_data_directory</name></property>
        <property><name>pageview_datasets_file</name></property>

        <property><name>unique_devices_per_domain_daily_table</name></property>
        <property><name>unique_devices_data_directory</name></property>
        <property><name>unique_devices_datasets_file</name></property>
        <property><name>unique_devices_per_domain_archive_directory</name></property>

        <property><name>temporary_directory</name></property>

        <property><name>sla_alert_contact</name></property>
    </parameters>

    <controls>
        <!--(timeout is measured in minutes)-->
        <timeout>-1</timeout>

        <!-- Heavy on resource so limit parallel execution to 2 -->
        <concurrency>2</concurrency>

        <throttle>2</throttle>
    </controls>

    <datasets>
        <include>${pageview_datasets_file}</include>
        <include>${unique_devices_datasets_file}</include>
    </datasets>

    <input-events>
        <!--
            Please see datasets definition,
            the pageview_actor is extracted from webrequest refined dataset.
        -->
        <data-in name="pageview_actor" dataset="pageview_actor">
            <start-instance>${coord:current(0)}</start-instance>
            <end-instance>${coord:current(23)}</end-instance>
        </data-in>

        <!--
          We start computing unique_devices_per_domain_daily once unique_devices_per_project_family_daily is done
          to make sure cassandra loading actually has both datasets available as it unions them but only depends on
          unique_devices_per_domain_daily. If we don't put this dependency, the cassandra loading starts possibly
          without the per-project-family data.
        -->
        <data-in name="unique_devices_per_project_family_daily_delay" dataset="unique_devices_per_project_family_daily">
            <instance>${coord:current(0)}</instance>
        </data-in>
    </input-events>

    <output-events>
        <data-out name="unique_devices_per_domain_daily_output" dataset="unique_devices_per_domain_daily">
            <instance>${coord:current(0)}</instance>
        </data-out>
    </output-events>


   <action>
      <workflow>
          <app-path>${workflow_file}</app-path>

            <configuration>
              <!-- Pass these properties through to the workflow -->
              <property>
                  <name>year</name>
                  <value>${coord:formatTime(coord:nominalTime(), "y")}</value>
              </property>
              <property>
                  <name>month</name>
                  <value>${coord:formatTime(coord:nominalTime(), "M")}</value>
              </property>
              <property>
                  <name>day</name>
                  <value>${coord:formatTime(coord:nominalTime(), "d")}</value>
              </property>
              <property>
                  <name>padded_year</name>
                  <value>${coord:formatTime(coord:nominalTime(), "yyyy")}</value>
              </property>
              <property>
                  <name>padded_month</name>
                  <value>${coord:formatTime(coord:nominalTime(), "MM")}</value>
              </property>
              <property>
                  <name>padded_day</name>
                  <value>${coord:formatTime(coord:nominalTime(), "dd")}</value>
              </property>
              <property>
                    <name>unique_devices_per_domain_daily_current_directory</name>
                    <value>${coord:dataOut('unique_devices_per_domain_daily_output')}</value>
                </property>
          </configuration>
      </workflow>

      <sla:info>
            <!--
                Use action actual time as SLA base, since it's the time used
                to compute timeout
                We use 30 hours as one day of webrequest is needed, and webrequest
                can be waiting for 6 hours
            -->
            <sla:nominal-time>${coord:actualTime()}</sla:nominal-time>
            <sla:should-end>${30 * HOURS}</sla:should-end>
            <sla:alert-events>end_miss</sla:alert-events>
            <sla:alert-contact>${sla_alert_contact}</sla:alert-contact>
        </sla:info>
  </action>
  </coordinator-app>