<?xml version="1.0" encoding="UTF-8"?>
<bundle-app xmlns="uri:oozie:bundle:0.2"
    name="data-quality-hourly-bundle">

    <parameters>
        <property><name>coordinator_file</name></property>
        <property><name>name_node</name></property>
        <property><name>job_tracker</name></property>
        <property><name>hive2_jdbc_url</name></property>
        <property><name>hive_site_xml</name></property>
        <property><name>queue_name</name></property>
        <property><name>user</name></property>
        <property><name>artifacts_directory</name></property>
        <property><name>refinery_jar_version</name></property>

        <property><name>data_quality_table</name></property>
        <property><name>start_time</name></property>
        <property><name>stop_time</name></property>
        <property><name>workflow_file</name></property>

        <property><name>flag_directory_done_workflow_file</name></property>
        <property><name>done_flag_destination_directory</name> </property>
        <property><name>send_error_email_workflow_file</name></property>
        <property><name>sla_alert_contact</name></property>
    </parameters>

    <coordinator name="data-quality-event.navigationtiming-eventcapsule_metrics-hourly-coord">
        <app-path>${coordinator_file}</app-path>
        <configuration>
            <property><name>source_table</name><value>event.navigationtiming</value></property>
            <property><name>source_directory</name><value>/wmf/data/event/NavigationTiming</value></property>
            <property><name>query_name</name><value>eventcapsule_metrics</value></property>
        </configuration>
    </coordinator>

</bundle-app>
