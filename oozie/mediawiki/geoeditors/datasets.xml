<?xml version="1.0" encoding="UTF-8"?>
<!--
Defines reusable datasets for MediaWiki History data.
Use this dataset in your coordinator.xml files by setting:

    ${start_time}           - the initial instance of your data.
                              Example: 2014-04-01T00:00Z
    ${mw_private_directory} - Path to private import directory
                              Example: /wmf/data/wmf/mediawiki_private
-->

<datasets>

    <dataset name="geoeditors_public_monthly"
        frequency="${coord:months(1)}"
        initial-instance="${start_time}"
        timezone="Universal">
        <uri-template>${mw_private_directory}/geoeditors_public_monthly/month=${YEAR}-${MONTH}</uri-template>
        <done-flag>_SUCCESS</done-flag>
    </dataset>

    <dataset name="editors_daily"
             frequency="${coord:months(1)}"
             initial-instance="${start_time}"
             timezone="Universal">
        <uri-template>${mw_private_directory}/editors_daily/month=${YEAR}-${MONTH}</uri-template>
        <done-flag>_SUCCESS</done-flag>
    </dataset>

    <dataset name="geoeditors_monthly"
             frequency="${coord:months(1)}"
             initial-instance="${start_time}"
             timezone="Universal">
        <uri-template>${mw_private_directory}/geoeditors_monthly/month=${YEAR}-${MONTH}</uri-template>
        <done-flag>_SUCCESS</done-flag>
    </dataset>

    <dataset name="geoeditors_edits_monthly"
             frequency="${coord:months(1)}"
             initial-instance="${start_time}"
             timezone="Universal">
        <uri-template>${mw_private_directory}/geoeditors_edits_monthly/month=${YEAR}-${MONTH}</uri-template>
        <done-flag>_SUCCESS</done-flag>
    </dataset>

</datasets>
