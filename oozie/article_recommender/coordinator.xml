<?xml version="1.0" encoding="UTF-8"?>
<coordinator-app xmlns="uri:oozie:coordinator:0.4"
                 name="article-recommender-coord"
                 frequency="${coord:months(3)}"
                 start="${start_time}"
                 end="${stop_time}"
                 timezone="Universal">
    <parameters>
        <!-- Required properties. -->
        <property><name>name_node</name></property>
        <property><name>job_tracker</name></property>
        <property><name>queue_name</name></property>

        <property><name>start_time</name></property>
        <property><name>stop_time</name></property>

        <property><name>workflow_file</name></property>
        <property><name>send_error_email_workflow_file</name></property>
    </parameters>

    <action>
        <workflow>
            <app-path>${workflow_file}</app-path>
            <configuration>
                <property>
                    <name>script_end_date</name>
                    <value>${coord:formatTime(coord:nominalTime(), "YYYY")}${coord:formatTime(coord:nominalTime(), "MM")}${coord:formatTime(coord:nominalTime(), "dd")}</value>
                </property>
            </configuration>
        </workflow>
    </action>
</coordinator-app>
